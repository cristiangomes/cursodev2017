@model VisualOS.DAL.tb_ordemservico

@{
    ViewBag.Title = "EditarOS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar</h2>


@using (Html.BeginForm("EditarOS", "Editar", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Ordem de Serviço</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="control-label col-md-3">
                Data de Abertura
            </div>
            <div class="col-md-2">
                @Html.Label(DateTime.Now.Date.ToShortDateString(), new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-md-3">
                Tipo da Ordem de Serviço
            </div>
            <div class="col-md-2">
                @Html.EditorFor(model => model.Tipo_OS, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tipo_OS, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volte à pesquisa", "PesquisarOS", "Pesquisas")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
